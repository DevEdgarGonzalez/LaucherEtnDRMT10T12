<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llytParentShowText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.actia.nosotros.NosotrosShowTextFragment">
    <ImageButton
        android:id="@+id/ibtnFgmntShowtext"
        style="@style/btnCloseDialog"
        android:layout_gravity="right"
        android:focusable="true"
        android:background="@drawable/state_item_focus_control_remote"
        >
        <requestFocus/>
    </ImageButton>

    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/jtvLongContentWe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="50dp"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space style="@style/SpaceGnral" />

        <TextView
            android:id="@+id/tvShortContentWe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="100dp"
            android:paddingTop="20dp"
            android:textSize="30sp"
            android:textColor="@color/gray" />

    </LinearLayout>


</LinearLayout>
