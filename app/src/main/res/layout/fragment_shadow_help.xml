<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shadow_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent70"
    android:padding="16dp"
    tools:context="com.actia.utilities.ShadowHelpFragment">


    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/comment_text_view"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/navbar_comment"
        android:textColor="#828282"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/touch_screen_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_text_view"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="@string/touch_screen"
        android:textColor="#828282"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_text_view" />

    <ImageView
        android:id="@+id/swipeup_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/touch_screen_text_view"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_touch_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/touch_screen_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>