<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llytItemAbook"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/state_item_focus_control_remote"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardvAbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imgvCoverItmBook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:orientation="vertical"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/libro_infantil_bkg"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220px"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="1">

            <Space
                android:layout_width="match_parent"
                android:layout_height="160px"/>

            <TextView
                android:id="@+id/lblTitleItmBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:lines="2"
                android:maxLines="2"
                android:text="@string/text_example"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="15sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>