<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llytIteGame"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/state_item_focus_control_remote"
    android:focusable="true"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardvGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtvNameGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/games_item_name_textsize"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/imgvCoverGame"
            android:layout_width="@dimen/element_square_category"
            android:layout_height="@dimen/element_square_category"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
    </androidx.cardview.widget.CardView>



</LinearLayout>